// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  name            String?
  exerciseRecords ExerciseRecord[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model ExerciseRecord {
  id              Int           @id @default(autoincrement())
  date            DateTime      @default(now())
  user            User          @relation(fields: [userId], references: [id])
  userId          Int
  radioExercise   RadioExercise @relation(fields: [radioExerciseId], references: [id])
  radioExerciseId Int
  createdAt       DateTime      @default(now())
  transactionId   String?
  reward          Int?
}

model RadioExercise {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  description     String?
  password        String?
  reward          Int
  exerciseRecords ExerciseRecord[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}
